div
  ul
    each list in lists
      li
        a(href= `/lists/${list.id}`)=list.name
        button Update
        button Delete
  button#add-list-button Add List

div#add-list-popup
  +validationErrorSummary(errors)
  form#add-list-form(action= "/lists" method= "post")
    +field('List Name', 'name', '')
    input(type="hidden" name="_csrf" value=csrfToken)
    button#submit-add-list(type="submit") Add
    button#cancel-add-list(type="button") Cancel
