include utils.pug

doctype html
html
  head
      block head
        title= title
        link(rel='stylesheet' href='/stylesheets/popup.css')
        link(rel='stylesheet' href='/stylesheets/main.css')
        script(src="/javascripts/api-lists.js" type="module")
        script(src="https://kit.fontawesome.com/5103918af4.js" crossorigin="anonymous")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Noto+Sans+JP&family=Noto+Serif+JP&family=Oranienbaum&family=Press+Start+2P&display=swap" rel="stylesheet")
  body
    #main-window
      nav#navbar
        #navleft
          img(src="http://www.finalfantasyxiv.com/fankit_patch335/51Dyfvhz/ffxiv_twi05013.png" alt="Home" class="sprite")
          #user-info
            span#username= user.firstName
            br
            span.class-info Astrologian
            br
            span.class-info Level
              span#user-level  #{user.level}
        #navright
          div
            if locals.authenticated
              form(action='/users/logout' method='post')
                button#logout Logout
            else
              span
                a(href='/users/login') Login
                a(href='/users/signup') Sign Up
      #exp-bar
        #exp-progress(style=`width: ${user.exp / 10}%`)
      block content
