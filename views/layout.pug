include utils.pug

doctype html
html
  head
      block head
        title= title
        meta(name='title' property='og:title' content='TALE Of TASK')
        meta(property='og:type' content='Website')
        meta(name='image' property='og:image' content='https://i.imgur.com/RN4atMU.jpg')
        meta(name='description' property='og:description' content='A gamified to-do list app where users level up by completing their tasks.')
        meta(name='author' content='Christopher Hauser | John Lee | Srdan Vorkapic | Vladimir Radovanovic')
        link(rel='stylesheet' href='/stylesheets/popup.css')
        link(rel='stylesheet' href='/stylesheets/main.css')
        link(rel='stylesheet' href='/stylesheets/nav.css')
        link(rel='stylesheet' href='/stylesheets/exp.css')
        script(src="/javascripts/api-lists.js" type="module")
        script(src="/javascripts/classes.js" type="module")
        script(src="https://kit.fontawesome.com/5103918af4.js" crossorigin="anonymous")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Noto+Sans+JP&family=Noto+Serif+JP&family=Oranienbaum&family=Press+Start+2P&display=swap" rel="stylesheet")
  body
    #main-window
      nav#navbar
        #nav-contents
          #navtop
              span#main-title TALE Of TASK
              #exp-count
                  span#user-exp-label EXP
                  span#user-exp-num #{user.exp} / 1000
              form(action='/users/logout' method='post')
                button#logout Log Out
          #exp-container
              #exp-bar
                  #exp-progress(style=`width: ${user.exp / 10}%`)
      block content
      include moogleInfo.pug
