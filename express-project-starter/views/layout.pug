include utils.pug

doctype html
html
  head
      block head
        title= title
        link(rel='stylesheet' href='/stylesheets/popup.css')
  body
    nav
      a(href='/') Home
      div
        if locals.authenticated
          span Welcome #{user.firstName}!
          form(action='/users/logout' method='post')
            button Logout
        else
          span
            a(href='/users/login') Login
            a(href='/users/signup') Sign Up


  block content

    div
      ul
        each list in listNames
          li
            a(href= "/lists/:id")=list
      button Add List
    div#add-list-popup
      +validationErrorSummary(errors)
      form(action= "/lists" method= "post")
        +field('List Name', 'name', '')
        button Add
